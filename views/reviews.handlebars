<!-- Modal for review confirmation -->
<div id="confirmation-modal-bg" class="modal-bg" style="display:block">
    <div class="add-review-modal">
        <div class="confirmation-review-div">
            <div class="confirmation-heading">
                <h4>Confirmation</h4>
                <p>Are you sure you want to leave this review?</p>
            </div>
            <div class="confirmation-review">
                <h5>Review title</h5>
                <div class="confirm-stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <div class="review-para">Review text</div>
            </div>
            <div class="confirmation-btn-div">
                <button class="confirm-btn" type="submit">Go back</button>
                <button class="confirm-btn" type="submit">Confirm</button>
            </div>
        </div>
    </div>
</div>