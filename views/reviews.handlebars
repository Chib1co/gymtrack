<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Reviews</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form class="search">
                <label for="review-search">Find Class/Instructor Reviews</label> <!-- Dynamically switch between 'class'/'instructor depending on user selection -->
                <input id="review-search" name="review-search" type="text" placeholder="">
                <button type="submit">Search</button>
            </form>
            <form class="toggleswitch">
                <label for="t1">Class Reviews</label>
                <input id="t1" name="review-type" type="radio" checked>
                <label for="t2">Instructor Reviews</label>
                <input id="t2" name="review-type" type="radio">
            </form>
        </div>
    </div>
    {{!-- {{#each classes}}
        <div class="row">
            <div class="col-12">
                <h2>{{this.name}}</h2>
            </div>
        </div> --}}
        <h2>Class Reviwes</h2>
        {{#each classreviews}} <!-- refers to all reviews for each class -->
           <div class="row">
               <div class="class-review col-5">

                   <h3>Title: {{title}}</h3>
                   <h4>Review: {{review}}</h4>
                   <h4>Rate: {{rating}}</h4>
                   <h6>{{author}}</h6><!--need to figure out how to get author-->
               </div>
            </div>
         {{/each}}

        <h2>Instructor Reviews</h2>
        {{#each instructorReviews}} 
           
            <div class="row">
                <div class="individual-review col-5">               
                <h3>Title: {{title}}</h3>
                <h4>Review: {{review}}</h4>
                <h4>Rate: {{rating}}</h4>
                </div>
            </div>
        {{/each}}
   
</div>