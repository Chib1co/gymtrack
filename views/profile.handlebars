<div class="profile-container container">
    <div class="row">
        <div class="profile-heading col-12">
            <h1>Profile</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="user-info">
                <h2>{{firstName}} {{lastName}}</h2>
                <h5>{{userType}}</h5>
                <p>
                    <strong>Email:</strong> {{email}}<br>
                    <strong>Date joined: </strong>{{dateJoined}}
                <p>
            </div>
         </div>
    </div> 

    <div class="row">
        <div class="col-12">
            <div class="my-classes">
                <div class="row">
                    <div class="col-12">
                        <div class="classes-heading">
                            <h3>My Classes</h3>
                        </div>
                    </div>
                </div>
                <!-- Render Member/Instructor's current classes -->
                {{#if instructor}}
                    {{#if hasClasses}}
                        <form id="add-class-form" action="/add-class"> 
                            <button id="add-class-btn" type="submit" value="addClass">
                                Create a class
                            </button>
                        </form>
                        {{#each instructorClasses}}
                        <div class="instructor-class">
                            <div class="instructor-class-info">
                                <div class="single-class-heading">
                                    <h4><span class="class-name-span">{{name}}</span> <span class="class-date-span">{{classDate}}</span></h4>
                                </div>
                                <table class="class-table">
                                    <tr>
                                        <td class="table-row-one">
                                            <p>DESCRIPTION:</p>
                                        </td>
                                        <td class="table-row-two">
                                            <p>{{description}}</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="table-row-one">
                                            <p>COST PER CLASS:</p>
                                        </td>
                                        <td class="table-row-two">
                                            <p>${{price}}</p>
                                        </td>
                                    </tr>                            
                                </table>
                                {{!-- <p>Description: {{description}}</p>
                                <p>Price: ${{price}}/class </p> --}}
                            </div>
                            <table class="instructor-class-options">
                                <tr>
                                    <td class="table-row-instructor">
                                        <form class="class-options-form" action=""> 
                                            <button id="edit-class-btn" type="submit" class="class-options-btn">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                        </form>
                                    </td>
                                    <td class="table-row-instructor left-border">
                                        <form class="class-options-form"  action=""> 
                                            <button id="delete-class-btn" type="submit" class="class-options-btn">
                                                <i class="fas fa-minus-circle"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        {{/each}}
                    {{else}}
                        <h3>You currently have no classes</h3>
                        <form action="/add-class"> <!-- For instructosr with no classes -->
                            <input type="submit" value="Create Class">
                        </form>
                    {{/if}}
                {{/if}}
                {{#if member}}
                    {{#if hasClasses}}
                        {{#each memberClasses}}
                        <div class="member-class">
                            <div class="single-class-heading">
                                <h4><span class="class-name-span">{{name}}</span> <span class="class-date-span">{{classDate}}</span></h4>
                            </div>
                            <table class="class-table">
                                <tr>
                                    <td class="table-row-one">
                                        <p>INSTRUCTOR:</p>
                                    </td>
                                    <td class="table-row-two">
                                        <p>{{classInstructor}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="table-row-one">
                                        <p>DESCRIPTION:</p>
                                    </td>
                                    <td class="table-row-two">
                                        <p>{{description}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="table-row-one">
                                        <p>COST PER CLASS:</p>
                                    </td>
                                    <td class="table-row-two">
                                        <p>${{price}}</p>
                                    </td>
                                </tr>                            
                            </table>
                            <form action=""> 
                                <button id="cancel-btn" type="submit" class = "withdraw" data-id="{{id}}">
                                    Cancel booking
                                </button>
                            </form>
                        </div>
                        {{/each}}
                    {{else}}
                        <h3>You currently have no booked classes</h3>
                        <form action="/classes">
                            <input type="submit" value="View Classes">
                        </form>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>